libplacebo-devel_package() {
	depends="libplacebo-${version}_${revision} vulkan-loader lcms2-devel
	 libepoxy-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
