}

do_install() {
	vmkdir opt/ungoogled-chromium
	vmkdir usr/bin
	cp -rp * ${DESTDIR}/opt/ungoogled-chromium
	ln -srf ${DESTDIR}/opt/ungoogled-chromium/chrome ${DESTDIR}/usr/bin/chrome
}
